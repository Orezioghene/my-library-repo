@{
}

<form method="post" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="BookId" class="form-control"/>
    <div class="form-group">
        <label asp-for="UserReview">Review</label>
        <input asp-for="UserReview" class="form-control" placeholder="UserReview">
        <span asp-validation-for="UserReview" class="text-danger"></span>

        <label asp-for="UserId">UserId</label>
        <input asp-for="UserId" class="form-control" placeholder="UserId">
        <span asp-validation-for="UserId" class="text-danger"></span>

        

    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    @*<a asp-controller="Book" asp-action="Detail" class="btn btn-secondary">Back to List</a>*@
    <a href="@Url.Action("Detail", "Book", new { Model.BookId})" class="btn btn-primary">Back To Detail</a>
</form>
