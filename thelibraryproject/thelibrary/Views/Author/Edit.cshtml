<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" placeholder="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Biography">Biography</label>
        <input asp-for="Biography" class="form-control" placeholder="Biography">
        <span asp-validation-for="Biography" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Sex">Sex</label>
        <select asp-for="Sex" asp-items="@Html.GetEnumSelectList<sex>()" class="form-control" placeholder="Sex">
            <option>--Select--</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>