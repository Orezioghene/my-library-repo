    <span asp-validation-for="Category.Name" class="text-danger"></span>
  </div>
    <div class="form-group">
        <label asp-for="ActualBook">The Book</label>
        <input asp-for="ActualBook" type="file" class="form-control" placeholder="ActualBook">
